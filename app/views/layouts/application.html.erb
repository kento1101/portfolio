<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
 <script src="https://kit.fontawesome.com/fad7ba032c.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    <header>


<div class="container">
 <div class="row mr-0 ml-0">
<div class="title col-md-10 mt-2"><%= link_to "Closet", root_path, class: "logo" %></div>
<div class="col-md-2">
 <% if user_signed_in? %>

        <nav class="navbar navbar-light  justify-content-end mt-3">

             <ul class="navbar-nav">
              <li  class="nav-item">
                <%= link_to "About", about_path, class: "menu far fa-lightbulb" %>
              </li>
            </ul>
             </nav>
            <% else %>
             <nav class="navbar navbar-light  justify-content-end">
             <ul class="navbar-nav">
                 <div class="row mt-3">
              <li  class="nav-item col-md-6 pr-5">
                <%= link_to "About", about_path, class: "menu far fa-lightbulb" %>
              </li>

               <li  class="nav-item  col-md-6 pl-5">
                 <%= link_to "SignUp", new_user_registration_path, class: "menu fas fa-user-plus" %>
               </li>

               </div>
             </ul>

        </nav>
   <% end %>
   </div>

   </div>
</div>
    </header>

   <div class="row">
      <% if user_signed_in? %>
    <div class="col-md-3 sidebar"><%= render 'homes/sidebar' %></div>
     <% else %>
      <% end %>
    <div class="col-md-9"><%= yield %></div>
    </div>

    <footer>
        <p class="text-center">Footer</p>
    </footer>


  </body>


</html>
