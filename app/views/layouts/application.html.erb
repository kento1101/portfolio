<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
        <nav class="navbar navbar-light bg-secondary justify-content-end">
              <% if user_signed_in? %>
            <ul class="navbar-nav">
              <li class="nav-item">
               <%= link_to "スタイル一覧", styles_path %>
              </li>
              <li  class="nav-item">
               <%= link_to "クローゼット", items_path %>
              </li>

              <li  class="nav-item">
               <%= link_to "Log out", destroy_user_session_path, method: :delete %>
              </li>
            </ul>

            <% else %>
             <ul class="navbar-nav">
              <li  class="nav-item">
                <%= link_to "About", about_path %>
              </li>

               <li  class="nav-item">
                 <%= link_to "Sign up", new_user_registration_path %>
               </li>
               <li  class="nav-item">
                 <%= link_to "Log in", new_user_session_path %>
               </li>
             </ul>
            <% end %>
        </nav>
    </header>

    <%= yield %>
    <footer>
        <p class="text-center bg-secondary text-light">Footer</p>
    </footer>
  </body>
</html>
