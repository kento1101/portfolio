
<h2 class="heading mt-3">Profile</h2>

  <div class="row profile-page ">

    <div class="col-md-1"></div>

    <% if @user == current_user  %>

    <div class="col-md-5 profile">
      <%= attachment_image_tag @user, :image, format: 'png', size: "300x300", class: "profile" %>
    </div>

    <div class="col-md-5 mt-3">
      <table class="table table-striped">
        <tr>
         <th>名前</th><td><%=@user.name %></td>
        </tr>
        <tr>
         <th>自己紹介</th><td><%= @user.introduction %></td>
        </tr>
        <tr>
         <th>メールアドレス</th><td><%= @user.email %></td>
        </tr>
        <tr>
    	 <th>follows</th><td><%= link_to user_followings_path(@user) do %><%= @user.followings.count %><% end %></td>
         </tr>
        <tr>
	      <th>followers</th><td><%= link_to user_followers_path(@user) do %><%= @user.followers.count %><% end %></td>
        </tr>
       </table>

      <div><%= link_to '', edit_user_path(@user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{@user.id}" %></div>
    </div>

   <% else %>

    <div class="col-md-5">
      <%= attachment_image_tag @user, :image, format: 'jpeg', size:"300x300" %>
    </div>

    <div class="col-md-5 mt-5">
      <table class="table table-striped">
        <tr>
         <th>名前</th><td><%=@user.name %></td>
        </tr>
        <tr>
         <th>自己紹介</th><td><%= @user.introduction %></td>
        </tr>
      <tr>
	   <th>follows</th><td><%= link_to user_followings_path(@user) do %><%= @user.followings.count %><% end %></td>
      </tr>
      <tr>
	   <th>followers</th><td><%= link_to user_followers_path(@user) do %><%= @user.followers.count %><% end %></td>
      </tr>
      </table>

       <div class="follow-btn" id="user_<%= @user.id %>"> <%= render partial: 'relationships/follow', locals: {user: @user} %></div>
    </div>

     <% end %>

<div class="style-images">
<% @styles.each do |style| %>

<div>
<%= link_to style_path(style) do %>
<%= attachment_image_tag style, :image, format: 'jpeg', size: "150x200", class: "mr-5 user-style" %>
<% end %>
</div>

<% end %>

</div>




    <div class="col-md-1"></div>

  </div>

<div class="pagenate"><%= paginate @styles %></div>