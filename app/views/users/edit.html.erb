<h3 class="heading">User情報編集</h3>

<%= form_with model:@user, url:"/users/#{@user.id}", local:true do |f| %>


<%= attachment_image_tag @user, :image, :fill,60,60 %>
<label for="inputImage">ProfileImage</label>
<%= f.attachment_field :image, placeholder: "プロフィール画像" %>

<h4>名前</h4>
<%= f.text_field :name %>

<h4>自己紹介文</h4>
<%= f.text_area :introduction %>


<h4>メールアドレス</h4>
<%= f.text_field :email %>

<%= f.submit '変更を保存' %>


<% end %>