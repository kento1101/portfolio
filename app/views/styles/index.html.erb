<h3 class="heading">Styles</h3>

<div class="container">
<div class="row">

<div class="col-md-1"></div>

 <div class="d-flex flex-wrap justify-content-around col-md-10">
<% @all_ranks.each do |style| %>


<div>
<%= link_to style_path(style) do %>
<%= attachment_image_tag style, :image, format: 'jpeg', size:"150x150" %>
<% end %>
<p><%= link_to "#{style.comments.count}コメント", style_path(style.id)  %></p>

 <%if style.favorited_by?(current_user) %>
  <p>
    <%= link_to style_favorites_path(style), method: :delete do %>
    ♥<%= style.favorites.count %>いいね
    <%  end %>
  </p>
  <% else %>
   <p>
    <%= link_to style_favorites_path(style), method: :post do %>
    ♡<%= style.favorites.count %>いいね
    <%  end %>
  </p>
  <% end %>
 </div>

<% end %>
</div>

<div class="col-md-1"></div>


</div>
</div>