<h3 class="heading">Closet</h3>



<div class="row">

<div class="col-md-1"></div>

 <div class="d-flex flex-wrap justify-content-between col-md-10">
<% @my_items.each do |item| %>


<div>
<%= link_to item_path(item) do %>
<%= attachment_image_tag item, :image, format: 'jpeg', size: "150x200"  %>
<% end %>

<%= link_to item_path(item) do %>
<p class="text-center"><%= item.name %></p>
<% end %>
<p class="text-center"><%= item.detail %></p>
</div>

<% end %>
</div>

<div class="col-md-1"></div>


</div>