<h3 class="heading">Closet</h3>
<div class="btn">
        <%= link_to 'アイテム追加', new_item_path, class: "btn btn-outline-secondary" %>
</div>

<div class="btn">
        <%= link_to 'スタイル追加', new_style_path, class: "btn btn-outline-secondary" %>
</div>

<div class="btn">
        <%= link_to 'ユーザー情報', user_path(current_user.id), class: "btn btn-outline-secondary" %>
</div>

<div class="container">
<div class="row">

<div class="col-md-1"></div>

 <div class="d-flex flex-wrap justify-content-between col-md-10">
<% @my_items.each do |item| %>


<div>
<%= link_to item_path(item) do %>
<%= attachment_image_tag item, :image, format: 'jpeg', size:"200x200" %>
<% end %>

<%= link_to item_path(item) do %>
<p class="text-center"><%= item.name %></p>
<% end %>
<p class="text-center"><%= item.detail %></p>
</div>

<% end %>
</div>

<div class="col-md-1"></div>


</div>
</div>