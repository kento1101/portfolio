<h2 class="heading mt-3">New Item</h2>


<div class="row mt-5">

<div class="col-md-1"></div>


<div class="col-md-10">
<%= form_with model:@item, url:'/items', local:true do |f| %>


<table class="table table-striped">
<tr>
<th>画像</th>
<td><%= f.attachment_field :image %></td>
</tr>


<tr>
<th>名前</th>
<td><%= f.text_field :name %></td>
</tr>

<tr>
<th>詳細</th>
<td><%= f.text_area :detail %></td>
</tr>
</table>

<%= f.submit '保存', class: "btn btn-primary" %>


<% end %>

</div>

<div class="col-md-1"></div>

</div>