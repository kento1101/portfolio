
<h2 class="heading mt-3">アイテム詳細</h2>

<div class="row mt-5">
    <div class="col-md-1"></div>

    <div class="col-md-5">
        <%= attachment_image_tag @item, :image, format: 'png', size: "300x300" %>
    </div>

    <div class="col-md-5 mt-5 text-center">
        <div style="display:block"><h4><%= @item.name %></h4></div>
        <div style="display:block"><h5><%= @item.detail %></h5></div>
        <div class="mt-5">
            <%= link_to "Edit", edit_item_path(@item.id), class: "btn  btn-outline-secondary" %>
            <%= link_to "Delete", item_path(@item.id), method: :delete,class: "btn  btn-outline-secondary" %>
        </div>
    </div>

    <div class="col-md-1"></div>

</div>